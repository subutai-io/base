<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>hub-manager</artifactId>
    <groupId>io.subutai</groupId>
    <version>4.0.0-RC6</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>hub-manager-impl</artifactId>
  <packaging>bundle</packaging>
  <name>Subutai Hub Manager Impl</name>
  <description>Subutai Hub Manager Impl</description>

  <dependencies>

    <dependency>
      <groupId>commons-net</groupId>
      <artifactId>commons-net</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>subutai-common</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>metric-api</artifactId>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.dataformat</groupId>
      <artifactId>jackson-dataformat-cbor</artifactId>
      <version>2.6.1</version>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>2.6.1</version>
    </dependency>

    <!-- Include subutai-hub-common and it dependencies until getting that in the internal maven repo -->
    <dependency>
      <groupId>io.subutai</groupId>
      <artifactId>subutai-hub-common</artifactId>
      <version>0.1</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/../lib/subutai-hub-share-0.1.jar</systemPath>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>peer-manager-api</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>security-manager-api</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>environment-manager-api</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>hub-manager-api</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Meta-Persistence>META-INF/persistence.xml</Meta-Persistence>
            <Bundle-SymbolicName>${project.groupId}.core.hubmanager.impl</Bundle-SymbolicName>
            <Export-Package>
              com.fasterxml.jackson.dataformat.cbor,
              {local-packages};version=${project.version};-noimport:=true
            </Export-Package>
            <Embed-Dependency>subutai-hub-common</Embed-Dependency>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>