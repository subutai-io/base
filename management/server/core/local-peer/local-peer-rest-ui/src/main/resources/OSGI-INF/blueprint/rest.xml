<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusLocalPeerRestUI">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <jaxrs:server address="/ui/local" id="localPeerRestUIService">
    <jaxrs:serviceBeans>
      <ref component-id="localPeerRestUIServiceImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="localPeerRestUIServiceImpl" class="io.subutai.localpeer.rest.ui.RestServiceImpl">
    <argument ref="localPeer" />
  </bean>

  <reference id="localPeer" availability="mandatory"
             interface="io.subutai.common.peer.LocalPeer" />

</blueprint>